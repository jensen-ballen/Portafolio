<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.21" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.21" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Incluir archivos del portafolio original -->
    <Content Include="..\index.html" Link="wwwroot\portfolio\index.html" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="..\security.min.js" Link="wwwroot\portfolio\security.min.js" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="..\idioma\translations.js" Link="wwwroot\portfolio\idioma\translations.js" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="..\Img\*" Link="wwwroot\portfolio\Img\%(RecursiveDir)%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
